{
  "extends": [
    "github>davydehaas98/renovate-config"
  ],
  "baseBranches": [
    "main"
  ],
  "argocd": {
    "fileMatch": ["\\.yaml$"]
  },
  "packageRules": [
    {
      "description": "Automatically merge minor and patch-level updates",
      "matchPackageNames": ["renovate"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "automergeType": "commit",
      "schedule": ["before 4am"],
    },
  ],
}
