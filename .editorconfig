# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
continuation_indent_size = 8
trim_trailing_whitespace = true
# insert_final_newline = true

[*.{json,js}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false

[*.{yaml,yml}]
indent_size = 2
indent_style = space
